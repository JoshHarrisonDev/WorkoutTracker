@model WorkoutTracker.Models.ExerciseWorkout

@{
    ViewBag.Title = "Create Exercise";
}

<h2>@ViewBag.Title</h2>

<h2>@Model.WorkoutName</h2>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="@Model.ExerciseName"></label>
        <div class="col-10">
            <input class="form-control" asp-for="@Model.ExerciseName" />
        </div>
    </div>

    @Html.HiddenFor(Model => Model.Workout)

    <div class="form-group">
        <div class="col-10">
            <input type="submit" value="Create" asp-controller="Exercise" />
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a class="btn btn-danger" asp-controller="Workout" asp-action="Details" asp-route-id="@Model.Workout">Cancel</a>
        </div>
    </div>
</form>