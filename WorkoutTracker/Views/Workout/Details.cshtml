@model WorkoutTracker.Data.Models.Workout

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Workout: @Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Exercises)
            <br />
            <a asp-controller="Exercise" asp-action="Create" asp-route-id="@Model.ID">Add Exercise</a>
        </dt>

        <dd class="col-sm-10">
            @foreach (var exercise in Model.Exercises)
            {
                <p>@exercise.Name</p>
                <a asp-action="Create" asp-controller="Set" asp-route-id="@exercise.ID">Add Set</a>

                <table class="table table-striped">
                    <tr class="col-sm-2">
                        <th>
                            Weight
                        </th>
                        <th>
                            Reps
                        </th>
                    </tr>

                    @foreach (var set in exercise.Sets)
                    {
                        <tr class="col-sm-10">
                            <td>
                                @set.Weight
                            </td>
                            <td>
                                @set.Reps
                            </td>

                        </tr>
                    }


                </table>




            }

        </dd>



    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
